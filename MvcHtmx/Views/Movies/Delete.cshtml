@model MvcHtmx.Models.MovieDisplayViewModel

@{ ViewBag.Title = "Film / Supprimer"; }

<form method="post" class="form-horizontal" hx-post="/movies/delete/@Model.Movie_ID/">

    <fieldset>

        <legend>@ViewBag.Title</legend>

        @await Html.PartialAsync("_Display.cshtml", Model)

        <hr>
        <div class="form-group row">
            <div class="offset-sm-3 col-sm-9">
                <input type="submit" value="Supprimer" class="btn btn-primary" />
                <a asp-action="Index" hx-target="main" hx-get="/movies/">Annuler</a>
            </div>
        </div>

    </fieldset>
</form>
