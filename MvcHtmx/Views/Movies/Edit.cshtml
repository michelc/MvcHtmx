@model MvcHtmx.Models.MovieEditorViewModel

@{ ViewBag.Title = "Film / Modifier"; }

<form method="post" class="form-horizontal" hx-post="/movies/edit/@Model.Movie_ID/">

    <fieldset>

        <legend>@ViewBag.Title</legend>

        @await Html.PartialAsync("_Editor.cshtml", Model)

        <hr>
        <div class="form-group row">
            <div class="offset-sm-3 col-sm-9">
                <input type="submit" value="Modifier" class="btn btn-primary" />
                <a asp-action="Index" hx-target="main" hx-get="/movies/">Annuler</a>
            </div>
        </div>

    </fieldset>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
